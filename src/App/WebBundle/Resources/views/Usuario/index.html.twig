{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuario list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codusuario</th>
                <th>Nombre</th>
                <th>Nombrecorto</th>
                <th>Loguin</th>
                <th>Password</th>
                <th>Estado</th>
                <th>Modoaceso</th>
                <th>Fecharegistro</th>
                <th>Ultimoacceso</th>
                <th>Cambiapass</th>
                <th>Email</th>
                <th>Tipodocumento</th>
                <th>Nrodocumento</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Fechacrea</th>
                <th>Fechamodifica</th>
                <th>User</th>
                <th>Terminal</th>
                <th>Ts</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codusuario }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.nombrecorto }}</td>
                <td>{{ entity.loguin }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.modoaceso }}</td>
                <td>{% if entity.fecharegistro %}{{ entity.fecharegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.ultimoacceso %}{{ entity.ultimoacceso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.cambiapass }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.tipodocumento }}</td>
                <td>{{ entity.nrodocumento }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{% if entity.fechacrea %}{{ entity.fechacrea|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechamodifica %}{{ entity.fechamodifica|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.terminal }}</td>
                <td>{% if entity.TS %}{{ entity.TS|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('usuario_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('usuario_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('usuario_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
